<idea-plugin>
    <id>org.example.PluginDemo</id>
    <name>ImpactAnalysis</name>
    <version>1.0-SNAPSHOT</version>
    <vendor email="support@plugdemo.com" url="http://www.plugdemo.com">plugdemo</vendor>

    <description><![CDATA[
    impact analysis plugin
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Impact Analyse" secondary="true" icon="drawables/icon.png" anchor="bottom"
                    factoryClass="MyToolWindowFactory"/>
    </extensions>

    <actions>
        <group id="ImpactAnalysis.DoAnalyse" text="Analyse" description="Start analyse">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action class="Analyse" id="ImpactAnalysis.Actions.DoAnalyse" text="Start Analyse"/>
        </group>

        <group id="com.strv.codemanager.action.higlightMenu" text="Highlight">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="HighlightAction" class="HighlightAction"
                    text="Highlight methods" description="Highlight all methods in currently opened file"
                    />
        </group>
    </actions>
</idea-plugin>